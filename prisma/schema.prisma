generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// TODO: Clean up schema
model User {
  id           Int          @id @default(autoincrement())
  email        String       @unique
  password     String
  hasDexcom    Boolean      @default(false)
  tokens       Token[]
  dexcomTokens DexcomToken?
  readings     Readings[]
  records      Record[]
}

model Token {
  id        Int      @id @default(autoincrement())
  token     String   @unique
  createdAt DateTime @default(now())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])

  @@index([userId])
}

model DexcomToken {
  id                    Int      @id @default(autoincrement())
  accessToken           String   @db.Text
  refreshToken          String   @unique
  expiresIn             Int
  createdAt             DateTime @default(now())
  userId                Int      @unique
  transmitterGeneration String   @default("")
  user                  User     @relation(fields: [userId], references: [id])

  @@index([userId])
}

model Readings {
  id                    Int     @id @default(autoincrement())
  displayDevice         String?
  displayTime           String
  systemTime            String
  recordId              String  @unique
  transmitterGeneration String
  transmitterId         String
  transmitterTicks      Int
  trend                 String
  trendRate             Float
  unit                  String
  value                 Int
  rateUnit              String
  userId                Int
  user                  User    @relation(fields: [userId], references: [id])

  @@index([userId])
}

model Record {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  userId    Int
  message   String
  user      User     @relation(fields: [userId], references: [id])

  @@index([userId])
}